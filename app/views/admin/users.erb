<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Users
      <!-- <small>add, modify, or delete users</small> -->
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/admin/users">Users</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <div class="box-header with-border pull-right">
            <button class="btn btn-default">Add New +</button>
          </div><!-- /.box-header -->
          <div class="box-body">
            <table class="table table-bordered">
              <tr>
                <th style="width: 10px">#</th>
                <th>Username</th>
                <th>Role</th>
                <th>Created</th>
                <th style="width: 120px">Actions</th>
              </tr>

              <% @users.each do |user| %>
              <tr>
                <td><%= user[:id] %></td>
                <td><%= user[:username] %></td>
                <td><%= user[:role] %></td>
                <td><%= user[:created_at] %></td>
                <td>
                  <a href="/admin/user/<%=user[:id] %>" class="btn btn-primary btn-sm">Edit</a>
                  <a href="/admin/user/<%=user[:id] %>" class="btn bg-maroon btn-sm">Delete</a>
                </td>
              </tr>
              <% end %>

            </table>
          </div><!-- /.box-body -->
          <div class="box-footer clearfix" style="text-align: left;">
            <%= will_paginate @users, renderer: BootstrapPagination::Sinatra %>
          </div>
        </div><!-- /.box -->
      </div><!-- /.col -->


    </div>
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
