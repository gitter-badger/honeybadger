<!-- Content Wrapper. Contains page content -->
<% form_for :post, "/admin/post/save/#{params[:id]}", :id => 'admin-form', :remote => true do |f| %>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Configuration
        <!-- <small>add, modify, or delete configs</small> -->
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="/admin/configs">Configs</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">

        <div class="col-md-6">

          <h2 class="page-header">Single Sign-on</h2>
          <div class="row">

            <div class="col-md-12">
              <!-- - Custom Tabs -->
              <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                  <li class="active"><a href="#tab_1" data-toggle="tab">Twitter</a></li>
                  <li><a href="#tab_2" data-toggle="tab">Facebook</a></li>
                  <li><a href="#tab_3" data-toggle="tab">Instagram</a></li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="tab_1">

                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>
                            <%= f.check_box :twitter_enable, :class => 'minimal', :checked => true %>
                            Enable Twitter SSO
                          </label>
                        </div>
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :twitter_key, :caption => "key" %>
                          <%= f.text_field :twitter_key, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :twitter_secret, :caption => "secret" %>
                          <%= f.text_field :twitter_secret, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->

                  </div><!-- - /.tab-pane -->
                  <div class="tab-pane" id="tab_2">

                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>
                            <%= f.check_box :facebook_enable, :class => 'minimal', :checked => true %>
                            Enable Facebook SSO
                          </label>
                        </div>
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :facebook_key, :caption => "key" %>
                          <%= f.text_field :facebook_key, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :facebook_secret, :caption => "secret" %>
                          <%= f.text_field :facebook_key, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->

                  </div><!-- - /.tab-pane -->
                  <div class="tab-pane" id="tab_3">

                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>
                            <%= f.check_box :instagram_enable, :class => 'minimal', :checked => true %>
                            Enable Instagram SSO
                          </label>
                        </div>
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :instagram_key, :caption => "key" %>
                          <%= f.text_field :instagram_key, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->
                    <div class="field row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <%= f.label :instagram_secret, :caption => "secret" %>
                          <%= f.text_field :instagram_secret, :class => 'form-control' %>
                        </div><!-- /.form-group -->
                      </div><!-- /.col -->
                    </div><!-- /.row -->

                  </div><!-- - /.tab-pane -->
                </div><!-- - /.tab-content -->
              </div><!-- - nav-tabs-custom -->
            </div><!-- - /.col -->

          </div> <!-- - /.row -->
          <!-- - END CUSTOM TABS -->


        </div><!-- /.col -->

      </div><!-- /.row -->

    </section><!-- /.content -->

  </div><!-- /.content-wrapper -->

<% end %>
<script>
 $(function(){

   $('.datatable').DataTable({
     "paging": true,
     "lengthChange": true,
     "searching": true,
     "ordering": true,
     "order": [[ 0, "desc" ]],
     "info": true,
     "autoWidth": true
   });

   $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
     checkboxClass: 'icheckbox_minimal-blue',
     radioClass: 'iradio_minimal-blue'
   });

 });
</script>
