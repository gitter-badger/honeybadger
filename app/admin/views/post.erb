<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Post form
      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/admin/posts">Posts</a></li>
      <li class="active"><%= params[:id] || 'New' %></li>
    </ol>
  </section>

  <% form_for :post, "/admin/post/save/#{params[:id]}", :id => 'admin-form', :remote => true do |f| %>
    <!-- Main content -->
    <section class="content col-md-12">



      <!-- SELECT2 EXAMPLE -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Detail</h3>
        </div>
        <div class="box-body">

          <div class="field row" id="field_name">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :user_id, :caption => "User" %>
                <%= f.select :user_id, :collection => User.all, :fields => [:email, :id], :class => 'form-control select2' %>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->


          <div class="field row" id="field_email">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :title, :caption => "Title" %>
                <%= f.text_field :title, :class => 'form-control', :required => true %>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="field row" id="field_password">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :content, :caption => "Content", :required => true %>
                <%= f.text_area :content, :class => 'form-control wysiwyg' %>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->


          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <hr>
                <button class="btn btn-primary">Save</button>
                <button class="btn btn-default" onclick="javascript: history.go(-1);">Go back</button>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        </div><!-- /.box-body -->

      </div><!-- /.box -->

    </section><!-- /.content -->

    <% end %>

</div><!-- /.content-wrapper -->


