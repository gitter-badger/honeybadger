<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Posts
      <!-- <small>add, modify, or delete posts</small> -->
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/admin/posts">Posts</a></li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box">
          <div class="box-header with-border pull-left">
            <a href="/admin/post" class="btn-sm btn btn-default">Add New +</a>
          </div><!-- /.box-header -->
          <div style="clear:both;">
          <div class="box-body">

            <table class="table table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th style="width: 10px">#</th>
                  <th>User</th>
                  <th>Title</th>
                  <th>Created</th>
                  <th style="width: 120px">Actions</th>
                </tr>
              </thead>

              <% @posts.each do |post| %>
              <tr id="row_<%= post[:id] %>">
                <td><%= post[:id] %></td>
                <td><%= post.user[:email] %></td>
                <td><%= post[:title] %></td>
                <td><%= post[:created_at] %></td>
                <td>
                  <a href="/admin/post/<%=post[:id] %>" class="btn btn-default btn-sm">Edit</a>
                  <a href="/admin/post/delete/<%=post[:id] %>" data-remote="true" data-confirm="Are You Sure?" class="btn bg-warning btn-sm">Delete</a>
                </td>
              </tr>
              <% end %>

            </table>
          </div><!-- /.box-body -->

        </div><!-- /.box -->
      </div><!-- /.col -->


    </div>
  </section><!-- /.content -->
</div><!-- /.content-wrapper -->

<script>
 $(function(){

   $('.datatable').DataTable({
     "paging": true,
     "lengthChange": true,
     "searching": true,
     "ordering": true,
     "order": [[ 0, "desc" ]],
     "info": true,
     "autoWidth": true
   });

 });
</script>
