<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      User form
      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="/admin"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/admin/users">Users</a></li>
      <li class="active"><%= params[:id] || 'New' %></li>
    </ol>
  </section>

  <form action="/admin/user/save/<%= params[:id] %>" data-remote="true" method="POST" id="admin-form">
    <!-- Main content -->
    <section class="content col-md-6">



      <!-- SELECT2 EXAMPLE -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Registration</h3>
        </div>
        <div class="box-body">

          <div class="field row" id="field_name">
            <div class="col-md-12">
              <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="<%= @user[:name] %>">
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->


          <div class="field row" id="field_email">
            <div class="col-md-12">
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" value="<%= @user[:email] %>">
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="field row" id="field_password">
            <div class="col-md-12">
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" value="">
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="field row" id="field_password_confirmation">
            <div class="col-md-12">
              <div class="form-group">
                <label>Password Confirmation</label>
                <input type="password" class="form-control" name="password_confirmation" value="">
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->


          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <hr>
                <button class="btn btn-primary">Save</button>
                <button class="btn btn-default" onclick="javascript: history.go(-1);">Go back</button>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        </div><!-- /.box-body -->

      </div><!-- /.box -->

    </section><!-- /.content -->






    <section class="content col-md-6">

      <!-- SELECT2 EXAMPLE -->
      <div class="box box-info">

        <div class="box-header with-border">
          <h3 class="box-title">Settings</h3>
        </div>

        <div class="box-body">

          <div class="field row" id="field_provider">
            <div class="col-md-12">
              <div class="form-group">
                <label>Provider</label>
                <select class="form-control select2" style="width: 100%;" name="provider">
                  <option value="email" selected="selected">Email</option>
                  <option value="twitter">Twitter</option>
                  <option value="instagram">Instagram</option>
                  <option value="github">Github</option>
                  <option value="linkedin">Linkedin</option>
                </select>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

          <div class="field row" id="field_role">
            <div class="col-md-12">
              <div class="form-group">
                <label>Role</label>
                <select class="form-control select2" style="width: 100%;" name="role">
                  <option value="admin">Admin</option>
                  <option value="users">Users</option>
                </select>
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        </div>

      </div>

    </section><!-- /.content -->







    <section class="content col-md-6">

      <!-- SELECT2 EXAMPLE -->
      <div class="box box-warning">

        <div class="box-header with-border">
          <h3 class="box-title">Social Media</h3>
        </div>

        <div class="box-body">
          <div class="field row" id="field_username">
            <div class="col-md-12">
              <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" value="<%= @user[:username] %>">
              </div><!-- /.form-group -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        </div>

      </div>

    </section><!-- /.content -->






  </form>

</div><!-- /.content-wrapper -->


<!-- Page script -->
<script>
 $(function () {

   var page = {

     events: {
       select2: function(){
         //Initialize Select2 Elements
         $(".select2").select2();
       },
       show_provider_fields: function(){
         var provider = $('select[name=provider]').val();
         switch(provider){
           case "email":
             $('#field_password').show();
             $('#field_password_confirmation').show();
             break;
         }
       }
     },

     methods: {
     }

   }

   page.events.select2();
   page.events.show_provider_fields();

 });
</script>
