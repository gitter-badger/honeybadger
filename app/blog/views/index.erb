<div class="extra-pagination inner">
  <nav class="pagination" role="navigation">
    <span class="page-number">Page 1 of 2</span>
    <a class="older-posts" href="/">Older Posts &rarr;</a>
  </nav>
</div>

<% @posts.each do |post| %>
    <article class="post">
      <header class="post-header">
        <h2 class="post-title"><a href="/blog/<%=post.title.to_slug%>/<%=post.id%>"><%=post.title%></a></h2>
      </header>
      <section class="post-excerpt">
        <%==post.content%>
      </section>
      <footer class="post-meta">
        <img class="author-thumb" src="<%=post.user.avatar_url%>" alt="Author image" nopin="nopin" />
        <a href="<%= url_for(:index) %>"><%=post.user.name%></a>
        <time class="post-date" datetime="2015-11-18"><%=post.created_at.strftime("%d %B %Y")%></time>
      </footer>
    </article>
<% end %>

<nav class="pagination" role="navigation">
  <span class="page-number">Page 1 of 2</span>
  <a class="older-posts" href="<%= url_for(:index) %>">Older Posts &rarr;</a>
</nav>
