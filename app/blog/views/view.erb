<article class="post">

  <header class="post-header">
    <h1 class="post-title"><%=@post.title%></h1>
    <section class="post-meta">
      <time class="" datetime="2015-11-18"><%=@post.created_at.strftime("%d %B %Y") %></time>
    </section>
  </header>

  <section class="post-content">
    <%==@post.content%>
  </section>

  <footer class="post-footer">

    <figure class="author-image">
      <a class="img" href="<%= url_for(:index) %>" style="background-image: url(<%=@post.user.avatar_url%>)"></a>
    </figure>

    <section class="author">
      <h4><a href="/">Honeybadger - A Ruby starter framework</a></h4>
      <p>Checkout our github page to <a href="https://github.com/jaequery/honeybadger">download</a> and use this framework.</p>
    </section>

  </footer>



</article>
