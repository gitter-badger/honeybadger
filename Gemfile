# Component requirements
gem 'erubis', '~> 2.7.0'
gem 'pg'
gem 'sequel'

# Test requirements
gem 'rspec', :group => 'test'
gem 'rack-test', :require => 'rack/test', :group => 'test'

# Padrino Stable Gem
gem 'padrino', '0.12.5'

# Better Errors
group :development do
  gem "better_errors"
  gem "binding_of_caller"
end
