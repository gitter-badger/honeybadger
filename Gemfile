# Optional JSON codec (faster performance)
# gem 'oj'

# Project requirements
gem 'rake'
gem 'json'

# authentication
gem 'omniauth'
gem 'omniauth-twitter'
gem 'omniauth-instagram'
gem 'omniauth-facebook'
gem 'omniauth-github'
gem 'omniauth-linkedin'
